<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/landing_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6FAFF"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingTop="28dp"
    android:paddingBottom="20dp">

    <!-- Header -->
    <TextView
        android:id="@+id/tvAppTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="BlueNotes"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#052A4A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Quick notes, synced to your device"
        android:textSize="14sp"
        android:textColor="#4B6B8A"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvAppTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- New Note button -->
    <Button
        android:id="@+id/btnNewNote"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="New Note"
        android:textAllCaps="false"
        android:backgroundTint="#0D6EFD"
        android:textColor="#FFFFFF"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Simple search placeholder -->
    <EditText
        android:id="@+id/etSearch"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:hint="Search notes"
        android:inputType="text"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:background="@android:color/white"
        android:elevation="2dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnNewNote"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Sample notes list (static placeholder cards) -->
    <ScrollView
        android:id="@+id/scrollNotes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/etSearch"
        app:layout_constraintBottom_toTopOf="@id/tvFooter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Note card 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="14dp"
                android:elevation="2dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/noteTitle1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shopping list"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#052A4A"/>

                <TextView
                    android:id="@+id/noteSnippet1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Milk, Eggs, Honey, Olive oil..."
                    android:textSize="14sp"
                    android:textColor="#4B6B8A"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>

            <!-- Note card 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="14dp"
                android:elevation="2dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/noteTitle2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Meeting notes"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#052A4A"/>

                <TextView
                    android:id="@+id/noteSnippet2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Discuss Q3 roadmap and deliverables..."
                    android:textSize="14sp"
                    android:textColor="#4B6B8A"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>

            <!-- Placeholder to indicate more -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="— End of sample notes —"
                android:textColor="#7B94AE"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- Footer / small hint -->
    <TextView
        android:id="@+id/tvFooter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Notes are saved locally on your device."
        android:textSize="12sp"
        android:textColor="#7B94AE"
        android:gravity="center"
        android:paddingTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
